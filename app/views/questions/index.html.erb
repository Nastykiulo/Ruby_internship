<h1>Questions</h1>

<form action="/questions" method="GET">
  <input type="text" name="title" >
  <input type="submit" value="Search for test title">
</form>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr scope="row">
        <td><%= question.question %></td>
        <td><%= link_to 'Show', question_path(id: question), class: "btn btn-light" %></td>
        <td><%= link_to 'Edit', edit_question_path(id: question), class: "btn btn-light"  %></td>
        <%#  %>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-light"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <%== pagy_bootstrap_nav(@pagy).html_safe %>
<br>

<%= link_to 'New Question', new_question_path, class:"btn btn-light" %>

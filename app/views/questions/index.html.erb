<h1>Questions</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Question</th>
      <th scope="col">Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr scope="row">
        <td><%= question.question %></td>
        <td><%= question.answer %></td>
        <td><%= link_to 'Show', test_question_path(test_id: params[:test_id], id: question), class: "btn btn-light" %></td>
        <td><%= link_to 'Edit', edit_test_question_path(test_id: params[:test_id], id: question), class: "btn btn-light"  %></td>
        <%#  %>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-light"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', new_question_path %>

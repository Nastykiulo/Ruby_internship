
    <div class="nested-fields form-group">
        <%= f.hidden_field :_destroy %>
        <div class="form-control">
            <%= f.label :question %>
            <%= f.text_field :question %>
        </div> 
        <fieldset>
            <legend>Answers:</legend>
                <%= f.fields_for :answer_items do |answer_items_form| %>
                <%= render "answer_fields", f: answer_items_form %>
            <% end %>
            <%= link_to_add_fields "Add Answers", f, :answer_items %>
        </fieldset>

        <div>
            <%= link_to "Remove", '#', class: "remove_fields btn btn-danger" %>
        </div>
    </div>

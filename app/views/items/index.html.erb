

<h1>Listing items</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Question</th>
      <th scope="col">Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr scope="row">
        <td><%= item.question_id %></td>
        <td><%= item.answer_id %></td>
        <td><%= link_to 'Show', item, class: "btn btn-light" %></td>
        <td><%= link_to 'Edit', edit_item_path(item), class: "btn btn-light"  %></td>
        <%#  %>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-light"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <%= link_to "New Page", items_path(page: @page + 1)%>
  <%= link_to "Preveous Page", items_path(page: @page - 1)%>
<br>

<%= link_to 'New Item', new_item_path, class:"btn btn-light" %>
